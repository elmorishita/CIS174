@model CountryViewModel
@{
    ViewData["Title"] = "Olympic Countries";
}

<div class="row">
    <div class="col-md-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            <a asp-action="Index"
            asp-route-activeGame="all"
            asp-route-activeCategory="@Model.ActiveCategory"
            class="list-group-item @Model.CheckActiveGame("all")">
            All
            </a>

            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameId"
                   asp-route-activeCategory="@Model.ActiveCategory"
                   class="list-group-item @Model.CheckActiveGame(game.GameId)">
                    @game.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            <a asp-action="Index"
               asp-route-activeCategory="all"
               asp-route-activeGame="@Model.ActiveGame"
               class="list-group-item @Model.CheckActiveCategory("all")">
                All
            </a>

            @foreach (Category category in Model.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@category.CategoryId"
                   asp-route-activeCategory="@Model.ActiveGame"
                   class="list-group-item @Model.CheckActiveGame(category.CategoryId)">
                    @category.Name
                </a>
            }
        </div>

    </div>
    <div class="col-md-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.CountryId">
                        <img src="~/images/@country.FlagImage" alt="@country.CountryName"
                             title="@country.CountryName | @country.Game.Name @country.Category.Name" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
