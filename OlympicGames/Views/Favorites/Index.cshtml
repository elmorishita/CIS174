@model CountryViewModel
@{
    ViewData["Title"] = "Favorites";
}

<div class="text-center mb-4">
    <h2>My Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary"
           asp-route-activeGame="@Model.ActiveGame"
           asp-route-activeCategory="@Model.ActiveCategory">
            Back to Home Page
        </a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites
        </button>
    </form>
    <br />
</div>


<div class="row">
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="~/images/@country.FlagImage" alt="" />
                        </div>
                        <div class="col-sm-4">
                            @country.CountryName
                        </div>
                        <div class="col-sm-4">
                            @country.Game.Name @country.Category.Name
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="col-4">
        <p>Here's a country name from the list:</p>
        <label asp-for="Country.CountryName"></label>
    </div>
</div>